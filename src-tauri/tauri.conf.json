{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mizly",
  "version": "0.1.1",
  "identifier": "ai.mizly.app",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Mizly-ai/app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1QTRGRjY5M0IyMjU0NzYKUldSMlZDSTdhZitrbGJkUFJCS1lyODBDaytVU2Z4Nm0xY1BhNWE5OENLNlhWb3FPQ2RaNGJkaDkK"
